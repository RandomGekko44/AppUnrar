<Window x:Class="AppUnrar.FileExtensionsManager_Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppUnrar"
        mc:Ignorable="d"
        Title="Add File Extension" Height="140" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height=".80*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,10,0,0" HorizontalAlignment="Center">
            <TextBox Name="txtFileExtension" Width="300" Height="20"/>
            <Label>Examples: .jpg, .png, .mp4</Label>
        </StackPanel>
        
        <Button Name="btnAddFileExtension" Click="btnAddFileExtension_Click" Width="80" Height="25" Grid.Row="2">Add</Button>
    </Grid>
</Window>
